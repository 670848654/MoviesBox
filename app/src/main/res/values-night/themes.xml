<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MoviesBox" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <!-- 应用的主要色调,actionBar默认使用该颜色，Toolbar导航栏的底色 -->
        <item name="colorPrimary">@color/pink500</item>
        <!-- 应用的主要暗色调,statusBarColor 默认使用该颜色 -->
        <item name="colorPrimaryDark">@color/pink500</item>
        <!-- 一般控件的选中效果默认采用该颜色,如 CheckBox,RadioButton,SwitchCompat，ProcessBar等-->
        <item name="colorAccent">@color/light_color_primary</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- 状态栏、顶部导航栏 相关-->
        <!-- status bar color -->
        <item name="android:statusBarColor">@color/night_color_primary</item>
        <!-- activity 是否能在status bar 底部绘制 -->
        <item name="android:windowOverscan">false</item>
        <!-- 让status bar透明，相当于statusBarColor=transparent + windowOverscan=true -->
        <item name="android:windowTranslucentStatus">false</item>
        <!-- 改变status bar 文字颜色， true黑色， false白色，API23可用-->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <item name="android:textColorPrimary">@color/night_text_color</item>

        <item name="android:textColor">@color/white</item>

        <item name="textAppearanceLargePopupMenu">@style/TextAppearance.App.BodyLarge</item>
        <item name="textAppearanceSmallPopupMenu">@style/TextAppearance.App.BodyLarge</item>
        <item name="popupMenuBackground">@drawable/custom_popup_background</item>
        <!--
                &lt;!&ndash; 控件相关 &ndash;&gt;
                &lt;!&ndash; button 文字是否全部大写（系统默认开）&ndash;&gt;
                <item name="android:textAllCaps">false</item>

                &lt;!&ndash; 默认 Button,TextView的文字颜色 &ndash;&gt;
                <item name="android:textColor">@color/night_text_color</item>
                &lt;!&ndash; 默认 EditView 输入框字体的颜色 &ndash;&gt;
                <item name="android:editTextColor">@color/night_text_color</item>
                &lt;!&ndash; RadioButton checkbox等控件的文字 &ndash;&gt;
                <item name="android:textColorPrimaryDisableOnly">@color/night_text_color</item>
                &lt;!&ndash; 应用的主要文字颜色,actionBar的标题文字默认使用该颜色 &ndash;&gt;
                <item name="android:textColorPrimary">@color/night_text_color</item>
                &lt;!&ndash; 辅助的文字颜色，一般比textColorPrimary的颜色弱一点，用于一些弱化的表示 &ndash;&gt;
                <item name="android:textColorSecondary">#C1C1C1</item>
                &lt;!&ndash; 控件选中时的颜色,默认使用colorAccent &ndash;&gt;
                <item name="android:colorControlActivated">@color/light_color_primary</item>
                &lt;!&ndash; 控件按压时的色调&ndash;&gt;
                <item name="android:colorControlHighlight">@color/pink300</item>
                &lt;!&ndash; CheckBox,RadioButton,SwitchCompat等默认状态的颜色 &ndash;&gt;
                <item name="android:colorControlNormal">@color/night_text_color</item>
                &lt;!&ndash; 默认按钮的背景颜色 &ndash;&gt;
                <item name="android:colorButtonNormal">@color/night_color_primary</item>

                &lt;!&ndash; Secondary brand color. &ndash;&gt;
                <item name="colorSecondary">@color/teal_200</item>
                <item name="colorSecondaryVariant">@color/teal_700</item>
                <item name="colorOnSecondary">@color/black</item>-->
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/night_color_primary</item>
        <item name="switchStyle">@style/Widget.App.Switch</item>
        <item name="chipStyle">@style/Widget.App.Chip</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>
    </style>

    <style name="Theme.MoviesBox.FullScreenTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- BUTTON 主题 -->
    <style name="Button.Icon" parent="Widget.Material3.Button.IconButton">
        <item name="materialThemeOverlay">@style/TextButton</item>
        <item name="backgroundTint">@color/night_text_button_background_color_selector</item>
        <item name="rippleColor">@color/m3_text_button_ripple_color_selector</item>
    </style>

    <style name="Button.IconButton" parent="Widget.Material3.Button.Icon">
        <item name="materialThemeOverlay">@style/TextButton</item>
        <item name="backgroundTint">@color/night_text_button_background_color_selector</item>
        <item name="rippleColor">@color/m3_text_button_ripple_color_selector</item>
    </style>

    <style name="Button.OutlinedButton.Icon" parent="Widget.Material3.Button.OutlinedButton.Icon">
        <item name="android:textAppearance">?attr/textAppearanceLabelLarge</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Material3.Button</item>
        <item name="materialThemeOverlay">@style/TextButton</item>
        <item name="backgroundTint">@color/night_text_button_background_color_selector</item>
        <item name="strokeColor">?attr/colorOnSurface</item>
        <item name="rippleColor">@color/m3_text_button_ripple_color_selector</item>
    </style>

    <style name="Button.TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="materialThemeOverlay">@style/TextButton</item>
        <item name="backgroundTint">@color/night_text_button_background_color_selector</item>
        <item name="rippleColor">@color/m3_text_button_ripple_color_selector</item>
    </style>
    <style name="Button.ElevatedButton" parent="Widget.Material3.Button.ElevatedButton">
        <item name="materialThemeOverlay">@style/TextButton</item>
        <item name="backgroundTint">@color/night_text_button_background_color_selector</item>
        <item name="rippleColor">@color/m3_text_button_ripple_color_selector</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
    </style>
    <style name="TextButton">
        <!-- The colors used by the color selectors -->
        <item name="colorOnContainer">@color/night_text_color</item>
        <item name="colorContainer">@android:color/transparent</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <!-- CARD 主题 -->
    <style name="CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/night_color_primary</item>
    </style>

    <style name="DefaultCardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/night_color_primary</item>
        <item name="strokeColor">@color/defaultCardStrokeColor</item>
        <item name="strokeWidth">0.5dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="CardTransparentView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/translucent</item>
        <item name="strokeColor">@null</item>
        <item name="cardElevation">0dp</item>
    </style>

    <!-- SWITCH STYLE -->
    <style name="Widget.App.Switch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>
    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorPrimaryContainer">@color/pink100</item>
        <item name="colorPrimary">@color/pink200</item>
    </style>

    <!-- Assist CHIP STYLE -->
    <style name="Widget.App.Chip" parent="Widget.Material3.Chip.Assist">
        <item name="android:textColor">@color/night_text_color</item>
        <item name="chipIconTint">@color/light_color_primary</item>
        <item name="chipBackgroundColor">@color/night_color_primary</item>
        <item name="chipStrokeColor">@color/light_color_primary</item>
        <item name="rippleColor">@color/m3_chip_ripple_color</item>
        <item name="checkedIconVisible">false</item>
        <item name="shapeAppearanceOverlay">@null</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="Widget.App.Chip.Filter" parent="Widget.Material3.Chip.Filter">
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconTint">@color/white</item>
        <item name="chipStrokeColor">@color/night_chip_stroke_color</item>
        <item name="chipSurfaceColor">?attr/colorSurface</item>
        <item name="chipBackgroundColor">@color/night_chip_background_color</item>
        <item name="rippleColor">@color/m3_chip_ripple_color</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="DialogStyle" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:windowSoftInputMode">stateVisible|adjustPan</item>
        <item name="colorPrimary">@color/night_text_color</item>
        <item name="android:background">@color/night_color_primary</item>
        <item name="colorSecondary">@color/night_color_primary</item>
        <item name="colorSurface">@color/night_color_primary</item>
        <item name="colorOnSurface">@color/night_color_primary</item>
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text</item>
        <item name="buttonBarPositiveButtonStyle">@style/ThemeOverlay.App.Button</item>
        <item name="buttonBarNeutralButtonStyle">@style/ThemeOverlay.App.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/ThemeOverlay.App.Button</item>
    </style>

    <style name="FullScreenDialogStyle" parent="DialogStyle">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:ignore="NewApi">shortEdges</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.Material3">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">28dp</item>
    </style>

    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/night_text_color</item>
    </style>

    <style name="ThemeOverlay.App.Button" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorControlNormal">@color/night_color_primary</item>
        <item name="colorSurface">@color/night_color_primary</item>
        <item name="colorOnSurface">@color/night_color_primary</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/night_color_primary</item>
        <!-- 定义 SearchView 样式 -->
        <item name="searchViewStyle">@style/CustomSearchView</item>
    </style>

    <!-- 自定义 SearchView 样式 -->
    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView">
        <!-- 去除下划线的关键属性 -->
        <item name="searchIcon">@null</item>
        <item name="submitBackground">@android:color/transparent</item>
        <item name="searchHintIcon">@android:color/transparent</item>

        <!-- 其他 SearchView 样式属性 -->
        <!-- ... -->
    </style>

    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="android:navigationBarColor" tools:ignore="NewApi">@android:color/transparent</item>
    </style>

    <style name="BottomNavigationView">
        <item name="android:background">@color/night_color_primary</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/pink200</item>
    </style>

    <style name="TextAppearance.App.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/night_text_color</item>
    </style>

    <style name="MyTabLayoutStyle" parent="Widget.Material3.TabLayout">
        <item name="android:background">@color/night_color_primary</item> <!-- 设置背景颜色 -->
        <!-- 可以添加其他属性或样式 -->
        <item name="tabTextColor">@color/night_text_color</item>
        <item name="tabSelectedTextColor">@color/pink200</item>
        <item name="tabIndicatorColor">@color/pink200</item>
    </style>

    <style name="NotFullActivity" parent="Theme.Material3.DayNight.Dialog.Alert">
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="colorPrimary">@color/night_color_primary</item>
        <item name="colorPrimaryDark">#bdbdbd</item>
        <item name="colorAccent">@color/pink200</item>
        <item name="android:textColorPrimary">@color/night_text_color</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="@style/ThemeOverlay.Material3.BottomSheetDialog">
        <item name="colorSurface">@color/night_color_primary</item>
    </style>

    <style name="BottomSheetDialogTheme2" parent="Widget.Material3.BottomSheet">
        <item name="colorSurface">@color/night_color_primary</item>
        <item name="backgroundTint">@color/night_color_primary</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation
        duration. -->
        <item name="windowSplashScreenBackground">@color/night_color_primary</item>

        <!-- Use windowSplashScreenAnimatedIcon to add a drawable or an animated
             drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <!-- Required for animated icons. -->
        <item name="windowSplashScreenAnimationDuration">200</item>

        <!-- Set the theme of the Activity that directly follows your splash
        screen. This is required. -->
        <item name="postSplashScreenTheme">@style/Theme.MoviesBox</item>
    </style>

    <style name="PopupTopAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_in</item>
        <item name="android:windowExitAnimation">@anim/popup_out</item>
    </style>

    <style name="BottomDialogAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/translate_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/translate_dialog_out</item>
    </style>
</resources>