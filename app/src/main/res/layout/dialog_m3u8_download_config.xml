<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="25dp"
                android:paddingTop="20dp"
                android:paddingRight="25dp"
                android:orientation="vertical">

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/ignoreTs"
                    style="@style/Widget.App.Switch"
                    android:textSize="16sp"
                    android:text="@string/setM3u8QueueIgnoreTs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="@string/setM3u8QueueIgnoreTsTitle"
                    android:textSize="14sp"
                    android:textColor="@color/pink200"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/slider"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stepSize="1"
                    android:valueFrom="4.0"
                    android:valueTo="100.0" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/pink200"
                    android:text="@string/setM3u8QueueNumDialogSubContent" />

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/removeAdTs"
                    android:layout_marginTop="8dp"
                    style="@style/Widget.App.Switch"
                    android:textSize="16sp"
                    android:text="@string/setM3u8RegRemoveAd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="14sp"
                    android:textColor="@color/pink200"
                    android:text="@string/setM3u8RemoveAdInfo" />

